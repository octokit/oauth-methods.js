{
  "name": "@octokit/oauth-methods",
  "type": "module",
  "version": "0.0.0-development",
  "description": "Set of stateless request methods to create, check, reset, refresh, and delete user access tokens for OAuth and GitHub Apps",
  "scripts": {
    "build": "node scripts/build.mjs && tsc -p tsconfig.json",
    "lint": "prettier --check '{src,test,scripts}/**/*' README.md package.json",
    "lint:fix": "prettier --write '{src,test,scripts}/**/*' README.md package.json",
    "pretest": "npm run -s lint",
    "test": "vitest --ui --coverage"
  },
  "repository": "https://github.com/octokit/oauth-methods.js",
  "keywords": [
    "github",
    "api",
    "sdk",
    "toolkit",
    "oauth"
  ],
  "author": "Gregor Martynus (https://dev.to/gr2m)",
  "license": "MIT",
  "dependencies": {
    "@octokit/oauth-authorization-url": "^7.0.0",
    "@octokit/request": "^9.1.0",
    "@octokit/request-error": "^6.1.0",
    "@octokit/types": "^13.0.0"
  },
  "devDependencies": {
    "@octokit/tsconfig": "^3.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.1.8",
    "esbuild": "^0.24.0",
    "fetch-mock": "^11.0.0",
    "glob": "^11.0.0",
    "prettier": "3.3.3",
    "semantic-release-plugin-update-version-in-files": "^1.1.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">= 18"
  }
}
